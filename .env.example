# Phoenix Framework Configuration
# These values are REQUIRED for the application to run
# Generate new secrets with: mix phx.gen.secret

# Secret key base for Phoenix (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=

# Signing salt for session cookies (generate with: mix phx.gen.secret)
SIGNING_SALT=

# Server configuration (optional, defaults provided)
# PORT=4000
# PHX_HOST=localhost
# UI_PORT=5173

# CORS allowed origins (comma-separated)
# In development: auto-detected from PORT and UI_PORT
# In production: REQUIRED if your frontend is on a different domain
# CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Enable Phoenix server in production (optional)
# PHX_SERVER=true

# Production DNS cluster query (production only, optional)
# DNS_CLUSTER_QUERY=